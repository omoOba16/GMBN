<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="video"
            type="com.example.gmbn.model.video_details.Items" />
        <variable
            name="Utils"
            type="com.example.gmbn.adapter.CustomBindingAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.DetailsActivity">
        <RelativeLayout
            android:id="@+id/vidPlayerLayout"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                bind:setCover="@{video.snippet.thumbnails.standard.url}"/>
        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vidPlayerLayout"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/standardPadding">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/titleTextSize"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_marginStart="@dimen/standardMargin"
                    android:layout_marginEnd="@dimen/standardMargin"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="@dimen/halfMargin"
                    android:text="@{video.snippet.title}"/>
                <TextView
                    android:id="@+id/views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/smallTextSize"
                    android:textColor="@color/textColor"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_marginStart="@dimen/standardMargin"
                    android:layout_marginEnd="@dimen/standardMargin"
                    android:layout_marginTop="@dimen/halfMargin"
                    android:text="@{Utils.Companion.setViewsCount(video.statistics.viewCount)}"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/halfMargin"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standardMargin"
                    android:layout_marginEnd="@dimen/standardMargin">
                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/smallTextSize"
                        android:text="@string/published_txt"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:textColor="@color/textColor"
                        android:text="@{Utils.Companion.setPublishTime(video.snippet.publishedAt)}"
                        android:id="@+id/publish_date"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textSize="@dimen/smallTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/halfMargin"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standardMargin"
                    android:layout_marginEnd="@dimen/standardMargin">
                    <TextView
                        android:textColor="@color/black"
                        android:text="@string/duration_txt"
                        android:textSize="@dimen/smallTextSize"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:id="@+id/duration"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textSize="@dimen/smallTextSize"
                        android:text="@{Utils.Companion.setDuration(video.contentDetails.duration)}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="@dimen/halfMargin"
                    android:background="@color/grey"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/halfMargin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standardMargin"
                    android:layout_marginEnd="@dimen/standardMargin">
                    <TextView
                        android:textColor="@color/black"
                        android:text="@string/description_txt"
                        android:textStyle="bold"
                        android:textSize="@dimen/titleTextSize"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/description"
                        android:text="@{video.snippet.description}"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textSize="@dimen/titleTextSize"
                        android:layout_marginTop="@dimen/halfMargin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="@dimen/halfMargin"
                    android:background="@color/grey"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/halfMargin"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standardMargin"
                    android:layout_marginEnd="@dimen/standardMargin">
                    <TextView
                        android:textColor="@color/black"
                        android:text="@string/comments_txt"
                        android:textStyle="bold"
                        android:textSize="@dimen/titleTextSize"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:id="@+id/comment_count"
                        android:text="@{video.statistics.commentCount}"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/halfMargin"
                    android:id="@+id/commentListView"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standardMargin"
                    android:layout_marginEnd="@dimen/standardMargin"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
